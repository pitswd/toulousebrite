<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
<div class="card text-center">
  <div class="card-header">
    <h3><%= @event.title %></h3>
  </div>
  <div class="card-body">
    
    <p class="card-text">Description : <%= @event.description %></p>
    <p class="card-text">Prix : <%= @event.price %></p>
    <p class="card-text">Date : <%= @event.start_date %></p>
    <p class="card-text">Durée : <%= @event.duration %> minutes</p>
    <p class="card-text">Lieu : <%= @event.location %></p>
    <br /><br />
    <a href="<%= root_path %>" class="btn btn-primary">Revenir aux évènements</a>
    <br /><br />
  </div>
  <div class="card-footer text-muted">
    Évènement créé le <%= @event.created_at %>
  </div>
</div>
    </div>
  </div>
</div>